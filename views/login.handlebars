<!doctype html>

<html lang="en">

<head>
	<meta charset="utf-8">
	<title>Log In</title>
	<meta name="description" content="Login page">
	<meta name="author" content="Kebrom Brhane">
	<link href="style.css" type="text/css" rel="stylesheet" />
</head>

<body>
	<ul class="ul" class="centerText">
		<li class="li"><a href="/">Home</a></li>

		<li style="float:right; display: {{Login}}"><a class="active" href="/login">Login</a></li>

	</ul>
	<h1>Welcome to Horeb Tuituion</h1>

	{{#if msg}}
	<p class="msg">{{msg}}</p>
	{{/if}}

	<div class="centerText">
		<h2>{{message}}</h2>
		<form action="/login" method="post">
			<h1>Log In</h1>
			<p>Username:<br /><input type="text2" name="Username" placeholder="Username" value="{{user}}" autofocus></p>
			<p>Password:<br /><input type="password" name="Password" placeholder="Password" value=""></p>
			<p><input type="submit" value="Log in"></p>
		</form>
	</div>
</body>

</html>